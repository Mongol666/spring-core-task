<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pushkin" class="by.itacademy.gpisarev.spring.models.Author">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="firstName" value="Александр"/>
        <constructor-arg index="2" value="Пушкин"/>
        <constructor-arg index="3" value="Сергеевич"/>
    </bean>

    <bean id="lermontov" class="by.itacademy.gpisarev.spring.models.Author">
        <property name="id" value="2"/>
        <property name="firstName" value="Михаил"/>
        <property name="lastName" value="Лермонтов"/>
        <property name="patronymic" value="Юрьевич"/>
    </bean>

</beans>